<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wojder.exerciset.view.fragments.NotificapptorFragment">

    <Button
        android:id="@+id/btn_notify_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="@string/notificapp_button_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/notificapp_instruction"
        android:id="@+id/notificapp_instruction"
        android:textAppearance="?android:textAppearanceMedium" />

</LinearLayout>
